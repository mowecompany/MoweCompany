<footer class="relative bg-vampire text-white overflow-hidden px-4">
  <!-- Fondo del footer -->
  <div class="absolute inset-0 bg-gradient-to-t from-green-500/20 to-vampire">
    <img 
      src="/MoweCompany/bgFooter.svg" 
      alt="Mowe Company Background" 
      class="w-full h-full object-cover opacity-30"
      loading="lazy"
      decoding="async"
      width="1920"
      height="1080"
    >
  </div>

  <!-- Contenido del footer -->
  <div class="relative container mx-auto px-4 py-8">
    <!-- Grid de contenido -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:text-center text-left">
      <!-- Social Media Links -->
      <div>
        <!-- Logo -->
        <div class="mb-6">
          <img 
            src="/MoweCompany/Imagotipo.svg" 
            alt="Mowe Company Logo" 
            class="h-8"
            loading="lazy"
            decoding="async"
            width="120"
            height="32"
          >
        </div>
        <h3 class="text-gray-400 text-start font-semibold mb-4">Síguenos</h3>
        <ul class="space-y-2">
          {[
            { name: 'TikTok', icon: 'tiktok.svg' },
            { name: 'Instagram', icon: 'instagram.svg' },
            { name: 'Youtube', icon: 'youtube.svg' },
            { name: 'X', icon: 'x.svg' },
            { name: 'Facebook', icon: 'facebook.svg' }
          ].map(social => (
            <li>
              <a href="#" class="flex items-center hover:text-kiwi transition-colors duration-300">
                <img 
                  src={`/MoweCompany/${social.icon}`} 
                  alt={social.name}
                  class="h-5 w-5 mr-2"
                  loading="lazy"
                  decoding="async"
                  width="20"
                  height="20"
                >
                {social.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Pages Links -->
      <div>
        <h3 class="text-gray-400 font-semibold mb-4">Pages</h3>
        <ul class="space-y-2">
          {[
            { name: 'Inicio', path: '/' },
            { name: 'Servicios', path: '/services' },
            { name: 'Planes', path: '/pricing' },
            { name: 'Nosotros', path: '/about' },
            { name: 'Contacto', path: '/contact' },
            { name: 'Blog', path: '/blog' },
            { name: 'FAQ', path: '/faq' }
          ].map(page => (
            <li>
              <a 
                href={`/MoweCompany${page.path}`} 
                class="hover:text-kiwi transition-colors duration-300"
              >
                {page.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- CMS Pages Links -->
      <div>
        <h3 class="text-gray-400 font-semibold mb-4">CMS Pages</h3>
        <ul class="space-y-2">
          {[
            { name: 'Blog Post Single', path: '/blog' },
            { name: 'Blog Category', path: '/blog' },
            { name: 'Job Listing Single', path: '/jobs' },
            { name: 'Job Category', path: '/jobs' },
            { name: 'Team Member', path: '/team' },
            { name: 'Product Single', path: '/products' },
            { name: 'Product Category', path: '/products' }
          ].map(page => (
            <li>
              <a 
                href={`/MoweCompany${page.path}`} 
                class="hover:text-kiwi transition-colors duration-300"
              >
                {page.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Copyright -->
    <div class="text-center mt-8 text-gray-500 text-xs">
      <p>Términos y condiciones de uso del sitio web - Política de privacidad</p>
    </div>
  </div>
</footer>