---
import Layout from '../layouts/Layout.astro';
import { FlickeringGridRounded } from "@/components/FlickeringGrid";
---

<Layout title="Contacto">
  <!-- Contacto -->
  <section class="min-h-screen relative overflow-hidden" id="contact"> 
    <div class="absolute inset-0 bg-gradient-to-b from-black to-vampire"></div>
  
    <!-- Fondo dinÃ¡mico FlickeringGridRounded -->
    <div class="absolute inset-0 z-0 w-full h-full pointer-events-none">
      <img src="/public/bg1.svg" alt="bg" class="absolute inset-0 w-full h-full object-cover">
      <div class="absolute inset-0 z-0 w-full h-full pointer-events-none opacity-20">
        <FlickeringGridRounded client:load />
      </div>
    </div>
  
    <div class="container mx-auto relative z-10 h-screen flex items-center justify-center px-4 sm:px-6 lg:px-8 -mt-10">
      <div class="grid grid-cols-1 gap-8 items-center w-full text-center">
        <!-- Contenedor de los textos -->
        <div class="relative max-w-full p-4 sm:p-6 bg-opacity-30"> 
          
        </div>
      </div>
    </div>
  </section>
</Layout>