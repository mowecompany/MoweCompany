---
import "@/styles/globals.css";
import NavBar from "@/components/NavBar.astro";
import Footer from "@/components/Footer.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Mowe Company" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/MoweCompany/favicon.svg" />
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-black text-white">
    <NavBar/>
    <main>
      <slot />
    </main>
    <Footer/>
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
  
  :root {
    --pixel-border: 2px solid #8EE53F;
  }
  
  .pixel-button {
    @apply bg-jungle text-kiwi border-2 border-kiwi px-6 py-3 font-pixel 
           hover:bg-kiwi hover:text-jungle transition-colors duration-300;
  }

  .section-title {
    @apply font-pixel text-3xl text-kiwi mb-12 text-center;
  }
</style>